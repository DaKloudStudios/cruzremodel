rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny ALL unless explicitly allowed
    match /{document=**} {
      allow read, write: if false;
    }

    // --- SECURE COLLECTIONS (Authenticated Users Only) ---
    // These collections require the user to be logged in to read or write data.
    match /projects/{document} {
      allow read, write: if request.auth != null;
    }
    match /time_logs/{document} {
      allow read, write: if request.auth != null;
    }
    match /leads/{document} {
      allow read, write: if request.auth != null;
    }
    match /calls/{document} {
      allow read, write: if request.auth != null;
    }
    match /appointments/{document} {
      allow read, write: if request.auth != null;
    }
    match /settings/{document} {
      allow read, write: if request.auth != null;
    }
    match /allowed_users/{document} {
      allow read, write: if request.auth != null;
    }
    match /estimates/{document} {
      allow read, write: if request.auth != null;
    }
    match /pricebook/{document} {
      allow read, write: if request.auth != null;
    }
    match /service_templates/{document} {
      allow read, write: if request.auth != null;
    }
    match /service_contracts/{document} {
      allow read, write: if request.auth != null;
    }
    match /service_visits/{document} {
      allow read, write: if request.auth != null;
    }
    match /equipment/{document} {
      allow read, write: if request.auth != null;
    }
    match /maintenance_logs/{document} {
      allow read, write: if request.auth != null;
    }

    // --- PUBLIC COLLECTIONS (Client Portal) ---
    // The clients collection stores the customer profiles and proposals.
    // Because clients view proposals and sign them WITHOUT logging in to a Firebase account,
    // this collection must allow public reads and writes.
    match /clients/{document} {
      allow read, write: if true;
    }
  }
}
